html  
  head
  meta(charset="utf-8")
  meta(http-equiv="X-UA-Compatible", content="IE=edge")
  title Ariel Gelbard
  meta(name="description", content="Ariel Gelbard's Portfolio")
  meta(name="viewport", content="width=device-width, initial-scale=1, minimum-scale=1.0, maximum-scale=1.0, minimal-ui")
  link(rel="stylesheet", href="/assets/styles/reset2.css", type="text/css")
  link(rel="stylesheet", href="/assets/styles/main.css", type="text/css")    
  body
  script.
    document.body.style.display="none";
  
  // ============================= 
  // Main Outline 
  // ============================= 
  
  // Header 
  header
    div.wrapper
      div.menu
        img(src="/assets/images/menu.png" alt="Navigation Menu Button")
      div.logo
        a(href="/" class="routeLink")
          h1 Ariel Gelbard
      nav
        ul
          a(href="/" class="routeLink")
            li Home
          a(href="/portfolio" class="routeLink")
            li Portfolio
          a(href="/about" class="routeLink")
            li About Me
          a(href="/contact" class="routeLink")
            li Contact Me
    div.space

  // Main Content 
  div.main.wrapper

  // Footer 
  footer
    div.wrapper
      div.social_media_footer
        a.gh(href="http://github.com/arielgelbard") Z
        a.ln(href="http://www.linkedin.com/pub/ariel-gelbard/58/155/475") I
        a.tw(href="https://twitter.com/arielgelbard") T
      div.footer_left
        a(href="")
        p Copyright Ariel Gelbard 2014


  // ============================= 
  // Templates: 

  // ============================= 
  // Home Page Template 
  // ============================= 
  script#home(type="text/template")
    div.intro
      h1 I am a Interactive Front End Developer
      div.gicons
        img(src="/assets/images/fast.png" alt="")
        h1 Fast
      div.gicons
        img(src="/assets/images/reliable.png" alt="")
        h1 Reliable            
      div.gicons
        img(src="/assets/images/informed.png" alt="")
        h1 Informed
      h2  I create awesome, functional code that everyone can enjoy interacting with    
  
  // ============================= 
  // Portfolio Page Template 
  // ============================= 
  script#portfolio(type="text/template")
    div.landing
      | {{#each piece}}
      div.portfolioPiece
        a(href="/portfolioDetail/{{id}}" class="routeLink")
          img(src="/assets/images/pieces/{{profilePic}}" alt="")
          div.hoverInfo
            h1 {{title}}
      | {{/each}}

  // ============================= 
  // Portfolio Details Page Template 
  // ============================= 
  script#portfolioLanding(type="text/template")
    div.details
      div(class="description")
        h1 {{title}}
        | {{#if content}}
        a(href="{{button1Link}}") {{button1Title}}
        a(href="{{button2Link}}") {{button2Title}}
        h3 Role: {{role}}
        p {{content}}
        p {{skills}}
      div(class="pictures")
        div(class="mobile")
          img(src="{{mobileScreenshot}}" alt="")
        div(class="desktop")
          img(src="{{desktopScreenshot}}" alt="")
        | {{/if}}

  // ============================= 
  // About Page Template 
  // ============================= 
  script#about(type="text/template")
    div.about
      div.about_left
        img(src="assets/images/me.png" alt="Picture of Ariel Gelbard")
        a(href="assets/resume.pdf") View My Resume
      div.about_right
        p My name is Ariel Gelbard. I currently live in the Toronto area and I am a student in the Web Design and Interactive Media program at Humber College.
        p I enjoy learning new programming languages and developing  amazing products. I always enjoy a challenging environment that can utilize my set of skills.
        p You will see me outdoors usually relaxing or being adventerous on endevours such as hikes, snow and water skiing.
        p Check me out on social media to learn more about me!

  // ============================= 
  // Contact Page Template 
  // ============================= 
  script#contact(type="text/template")
    div(class="contact")
      div(class="cLeft")
        h1 Get in Touch!
        div(class="cSocial")
          p(class="socialico") V
          p (416) 832-6858
        div(class="cSocial")
          p(class="socialico") M
          a(href="mailto:ariel.gelbard@gmail.com") ariel.gelbard@gmail.com
        div(class="cSocial")
          p(class="socialico")
            img(src="/assets/images/location.svg")
          p I am local to the Toronto Area
      div(class="contactForm")
        h1 Contact Me Now!
        form(action="" method="post" id="form")
          input(type="text" id="contactfullname" name="fullname" placeholder="Name")
          input(type="text" id="contactemail" name="email" placeholder="Email" required)
          textarea(placeholder="Message" id="contactmessage" name="message" required)
          button(id="submit") Send
        div(class="alert")

  // ============================= 
  // Libraries 
  // ============================= 
  script(type="text/javascript", src="http://code.jquery.com/jquery-2.1.1.min.js")
  script(type="text/javascript", src="http://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.7.0/underscore.js")
  script(type="text/javascript", src="http://cdnjs.cloudflare.com/ajax/libs/backbone.js/1.1.2/backbone.js")
  script(type="text/javascript", src="http://cdnjs.cloudflare.com/ajax/libs/handlebars.js/2.0.0/handlebars.js")

  // ============================= 
  // Application 
  // ============================= 
  script(type="text/javascript", src="/assets/scripts/main.js")
